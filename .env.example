# Weem Test Automation - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development
ENVIRONMENT=dev

# Base URLs
BASE_URL=https://dev.weem.sa/en

# Test Credentials
TEST_OTP=00000

# Phone Number Generation
PHONE_BASE=500000
PHONE_RANDOM_DIGITS=3

# Test Timeouts (milliseconds)
DEFAULT_TIMEOUT=60000
NAVIGATION_TIMEOUT=60000
ELEMENT_TIMEOUT=10000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1000

# Logging
LOG_LEVEL=info
DEBUG_MODE=false

# Browser Settings
HEADLESS=false
SLOW_MO=0

# Screenshots & Videos
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_RETRY=true

# Reporting
ALLURE_RESULTS_DIR=allure-results
HTML_REPORT_DIR=playwright-report

# CI/CD
CI=false
PARALLEL_WORKERS=1
